@Article{CohenColijnFinkleaMurray2007,
  author      = {Ted Cohen and Caroline Colijn and Bryson Finklea and Megan Murray},
  journal     = {Journal of the Royal Society, Interface},
  title       = {Exogenous re-infection and the dynamics of tuberculosis epidemics: local effects in a network model of transmission.},
