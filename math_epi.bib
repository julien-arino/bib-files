@Article{LiaoChengLinHsiehEtAl2012,
  author      = {Chung-Min Liao and Yi-Hsien Cheng and Yi-Jun Lin and Nan-Hung Hsieh and Tang-Luen Huang and Chia-Pin Chio and Szu-Chieh Chen and Min-Pei Ling},
  journal     = {Risk Anal},
  title       = {A probabilistic transmission and population dynamic model to assess tuberculosis infection risk.},
