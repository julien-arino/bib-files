@Article{EpsteinGoedeckeYuMorrisEtAl2007,
  Title                    = {Controlling pandemic flu: the value of international air travel restrictions.},
  Author                   = {Epstein, Joshua M. and Goedecke, D Michael and Yu, Feng and Morris, Robert J. and Wagener, Diane K. and Bobashev, Georgiy V.},
