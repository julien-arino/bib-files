@Article{GumboLouieDezielParsonsEtAl2004,
  author      = {Tawanda Gumbo and Arnold Louie and Mark R Deziel and Linda M Parsons and Max Salfinger and George L Drusano},
  journal     = {Journal of Infectious Diseases},
