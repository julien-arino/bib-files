@Article{Johnstone-RobertsonLawnWelteBekkerEtAl2011,
  author      = {Simon Johnstone-Robertson and Stephen D Lawn and Alex Welte and Linda-Gail Bekker and Robin Wood},
  journal     = {S Afr Med J},
