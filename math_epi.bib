@Article{Abu-RaddadSabatelliAchterbergSugimotoEtAl2009,
  author      = {Laith J Abu-Raddad and Lorenzo Sabatelli and Jerusha T Achterberg and Jonathan D Sugimoto and Ira M Longini and Christopher Dye and M. Elizabeth Halloran},
