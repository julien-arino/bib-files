@Article{ColizzaBarratBarthelemyVespignani2007,
  Title                    = {Predictability and epidemic pathways in global outbreaks of infectious diseases: the SARS case study.},
  Author                   = {Vittoria Colizza and Alain Barrat and Marc Barthélemy and Alessandro Vespignani},
  Journal                  = {BMC Med},
