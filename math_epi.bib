@Article{GomesAguasLopesNunesEtAl2012,
  author      = {M. Gabriela M Gomes and Ricardo Aguas and João S Lopes and Marta C Nunes and Carlota Rebelo and Paula Rodrigues and Claudio J Struchiner},
