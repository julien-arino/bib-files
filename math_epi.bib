@Article{YuLiWongEtAl2004,
  author      = {Yu, Ignatius T S. and Li, Yuguo and Wong, Tze Wai and Tam, Wilson and Chan, Andy T. and Lee, Joseph H W. and Leung, Dennis Y C. and Ho, Tommy},
