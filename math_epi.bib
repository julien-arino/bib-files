}

@Article{Vlugt-WensinkVlugtJiskootCrommelinEtAl2006,
  author      = {Karin D F Vlugt-Wensink and Thijs J H Vlugt and Wim Jiskoot and Daan J A Crommelin and Ruud Verrijk and Wim E Hennink},
