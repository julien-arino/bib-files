@Article{BeggsNoakesSleighEtAl2003,
  Title                    = {The transmission of tuberculosis in confined spaces: an analytical review of alternative epidemiological models.},
  Author                   = {Beggs, C.B. and Noakes, C.J. and Sleigh, P.A. and Fletcher, L.A. and Siddiqi, K.},
  Journal                  = {Int J Tuberc Lung Dis},
