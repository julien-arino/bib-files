@Article{CohenColijnMurray2008,
  author      = {Ted Cohen and Caroline Colijn and Megan Murray},
  journal     = {Proc Natl Acad Sci U S A},
  title       = {Modeling the effects of strain diversity and mechanisms of strain competition on the potential performance of new tuberculosis vaccines.},
